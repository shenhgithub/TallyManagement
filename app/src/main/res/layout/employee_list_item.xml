<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/employee_list_name_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_padding_small"
        android:paddingLeft="@dimen/text_view_default_text_padding_left"
        android:paddingTop="@dimen/default_padding_small"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_view_default_text_size"/>

    <TextView
        android:id="@+id/employee_list_short_code_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>